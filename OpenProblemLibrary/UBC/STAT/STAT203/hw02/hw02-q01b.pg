our $median;
our $parity = "not def";

our @sorted_toadlength = num_sort(@toadlength);
our $mid = int @sorted_toadlength/2;

if ((@sorted_toadlength % 2) == 0) {
    $median = ($sorted_toadlength[$mid-1] + $sorted_toadlength[$mid])/2;
    $parity = "even";
} 
else {
    $median = $sorted_toadlength[ $mid];
    $parity = "not even";
} 


